      .appliance__section.appliance-section-advantages#appliance-02
        .appliance__section-content 
          .appliance-section-advantages__slider.product-section-advantages__slider.swiper-container
            ul.swiper-wrapper(uk-lightbox="animation: slide")
              +product-section-advantages-slide({link:'product-section-advantages-slide-01-big.jpg', image: 'product-section-advantages-slide-01.jpg'})
              +product-section-advantages-slide({link:'product-section-advantages-slide-02-big.jpg', image: 'product-section-advantages-slide-02.jpg'})
              +product-section-advantages-slide({link:'product-section-advantages-slide-03-big.jpg', image: 'product-section-advantages-slide-03.jpg'})
              +product-section-advantages-slide({link:'product-section-advantages-slide-01-big.jpg', image: 'product-section-advantages-slide-01.jpg'})
              +product-section-advantages-slide({link:'product-section-advantages-slide-02-big.jpg', image: 'product-section-advantages-slide-02.jpg'})
