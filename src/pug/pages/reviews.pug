extends ../layout/main

block variables
  - var title = 'Публикации в сми';
  - var description = 'Description';
  - var pageClass = 'page--reviews';

mixin reviews-nav(args)
  ul.news__sections(uk-scrollspy-nav="closest: li; scroll: true; offset: 100")
    li.news__sections-item.news__sections-item--order: a(href="",uk-filter-control) Все аппараты
    li.news__sections-item: a(href="#year2020",uk-filter-control="[data-tags*='magicsuper']") Magic Super
    li.news__sections-item: a(href="#year2020",uk-filter-control="[data-tags*='magicsuperfull']") Magic Super Full
    li.news__sections-item: a(href="#year2020",uk-filter-control="[data-tags*='magicmax']") Magic Max
    li.news__sections-item: a(href="#year2020",uk-filter-control="[data-tags*='magicone']") Magic One
    li.news__sections-item: a(href="#year2020",uk-filter-control="[data-tags*='magiclite']") Magic Lite
    li.news__sections-item: a(href="#year2020",uk-filter-control="[data-tags*='magicpico']") Magic Pico
    li.news__sections-item: a(href="#year2020",uk-filter-control="[data-tags*='magicbella']") Magic Bella
    li.news__sections-item: a(href="#year2020",uk-filter-control="[data-tags*='magicslim']") Magic Slim
    li.news__sections-item: a(href="#year2020",uk-filter-control="[data-tags*='magicgyno']") Magic Gyno

