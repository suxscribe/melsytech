              option(value="choice0") Choice0
              option(value="choice1") Choice1 Lorem ipsum dolor sit amet.
              option(value="choice2") Choice2
              option(value="choice3") Choice3
              option(value="choice4") Choice4
            
      li
        .partners-page__list
